<main class="home-page js-home-page">
  <section class="hello-section">
    <div class="container-size">
      <div class="hello-section__wrap header-offset js-hello-section-wrap">
        <div class="void"></div>
        <div class="hello-section__content">
          <div class="page-title-block">
            <div class="subtitle page-title-block__subtitle">
              {{ lang 'site_focus' }}
            </div>
            <!-- /.subtitle -->
            <h1 class="page-title page-title_separated-lines page-title-block__title">
              <span class="page-title__line">{{ lang 'site_tagline_first_line' }} <div class="page-title__arrow-block page-title__arrow-block_right"><img src="/img/right-arrow.svg" alt="" class="page-title__arrow page-title__arrow_right js-right-arrow"></div></span>
              <span class="page-title__line page-title__line_accent"><div class="page-title__arrow-block page-title__arrow-block_left"><img src="/img/right-arrow.svg" alt="" class="page-title__arrow page-title__arrow_left js-left-arrow"></div> {{ lang 'site_tagline_second_line' }}</span>
            </h1>
            <!-- /.page-title -->
            <button class="accent-button">
              {{ lang 'cta_button' }}
            </button>
            <!-- /.accent-button -->
          </div>
          <!-- /.page-title-block -->
        </div>
        <!-- /.hello-section__content -->
        <div class="page-menu bottom-screen-offset">
          {{#if advantages.length}}
          <a href="/#why-us" class="page-menu__item">
            {{ lang 'why_us' }}
          </a>
          <!-- /.page-menu__item -->
          {{/if}}
          <a href="/#portfolio" class="page-menu__item" data-scroll-offset="60">
            {{ lang 'portfolio' }}
          </a>
          <!-- /.page-menu__item -->
        </div>
        <!-- /.page-menu -->
      </div>
      <!-- /.hello-section__wrap -->
    </div>
    <!-- /.container-size -->
  </section>
  <!-- /.hello-section -->
  {{#if advantages.length}}
    <section id="why-us" class="advantages-section js-advantages-section">
      <div class="containers-size">
        <div class="advantages-section__wrap">
          {{#each advantages as |advantage|}}
            <div class="advantages-section__item-wrap js-advantage-item-wrap">
              <div class="advantage advantages-section__item js-advantage-item {{#if advantage.accent }} advantage_accent {{/if}}">
                <div class="advantage__title">
                  {{#each advantage.title as |titleLine|}}
                    <div class="advantage__line-of-title">
                      {{ titleLine }}
                    </div>
                    <!-- /.advantage__line-of-title -->
                  {{/each}}
                </div>
                <!-- /.advantage__title -->
                {{#if advantage.subtitle.length}}
                  <div class="advantage__subtitle subtitle">
                    {{#each advantage.subtitle as |subtitleLine|}}
                      <div class="advantage__line-of-subtitle">
                        {{ subtitleLine }}
                      </div>
                      <!-- /.advantage__line-of-subtitle -->
                    {{/each}}
                  </div>
                  <!-- /.advantage__subtitle -->
                {{/if}}
              </div>
              <!-- /.advantage -->
            </div>
            <!-- /.advantages-section__item-wrap -->
          {{/each}}
        </div>
        <!-- /.advantages-section__wrap -->
      </div>
      <!-- /.containers-size -->
    </section>
    <!-- /.advantages-section -->
  {{/if}}
  <section id="portfolio" class="portfolio-section js-portfolio-section">
    <div>Тут будет портфолио</div>
  </section>
  <!-- /.portfolio-section -->
</main>
<!-- /.home-page -->