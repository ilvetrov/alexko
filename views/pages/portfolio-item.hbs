<main class="portfolio-item portfolio-item-page">
  <div class="portfolio-item__wrap">
    <div class="container-size">
      <div class="portfolio-item__header">
        <div class="portfolio-header">
          <a href="/portfolio" class="subtitle portfolio-header__subtitle">
            {{ lang 'portfolio' }}
            <span class="accent-slash">/</span>
          </a>
          <!-- /.subtitle -->
          <h1 class="page-title page-title_free-transform portfolio-header__title">
            {{ project.title }}
          </h1>
          <!-- /.page-title -->
          <div class="portfolio-descr portfolio-header__descr">
            <strong class="portfolio-descr__type">{{ lang project.type_name }}.</strong>
            <span class="portfolio-descr__main-text">{{ project.descr }}</span>
          </div>
          <!-- /.portfolio-descr -->
          <div class="portfolio-header__links">
            <a href="{{ project.to_link }}" {{{iif project.to_link_is_external 'target="_blank"' '' }}} class="text-link text-link_independent portfolio-header__link">
              <span class="inline-click-extender">{{ project.to_link_text }}</span>
            </a>
            <a href="#about-creating" class="text-link text-link_independent portfolio-header__link" data-scroll-offset="70">
              <span class="inline-click-extender">{{ project.creating_text }}</span>
            </a>
            {{#if project.demo_id}}
              <a href="#" class="text-link text-link_independent portfolio-header__link">
                <span class="inline-click-extender">{{ lang 'demo' }}</span>
              </a>
            {{/if}}
          </div>
          <!-- /.portfolio-header__links -->
        </div>
        <!-- /.portfolio-header -->
      </div>
      <!-- /.portfolio-item__header -->
    </div>
    <!-- /.container-size -->
    <div class="portfolio-item__intro-images js-portfolio-intro-images {{iifEquals project.type_id 1 'portfolio-item__intro-images_desktop' '' }}">
      <div class="portfolio-item__intro-gallery intro-images swiper-container {{iifEquals project.type_id 1 'intro-images_desktop desktop-gallery' 'intro-images_mobile mobile-gallery' }}" data-portfolio-gallery="1" data-centered-slides data-is-loop data-with-intro-images>
        <div class="swiper-wrapper">
          {{#each project.introImagesForFrontDesktop as |intro_image|}}
            <div class="intro-images__slide swiper-slide">
              <img {{{ intro_image }}} alt="" class="intro-images__image portfolio-shadow js-intro-image" {{iifEquals project.type_id 1 'data-intro-image-desktop' 'data-intro-image-mobile' }}>
            </div>
            <!-- /.swiper-slide -->
          {{/each}}
        </div>
        <!-- /.swiper-wrapper -->
      </div>
      <!-- /.portfolio-item__intro-gallery -->
    </div>
    <!-- /.portfolio-item__intro-images -->
  </div>
  <!-- /.portfolio-item__wrap -->
  <section id="about-creating" class="portfolio-item__content js-portfolio-content">
    {{#each project.text.blocks as |block|}}
      {{{textPartial block.type block.data }}}
    {{/each}}
  </section>
  <!-- /.portfolio-item__content -->
  <section class="write-to-us-section home-page__write-to-us-section">
    <div class="container-size">
      <div class="container-center">
        {{> write_to_us_form}}
      </div>
      <!-- /.container-center -->
    </div>
    <!-- /.container-size -->
  </section>
  <!-- /.write-to-us-section -->
</main>
<!-- /.portfolio-item -->