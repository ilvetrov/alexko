<main class="portfolio-item-page portfolio-page portfolio-item {{iif navigationExists '' 'portfolio-page_without-navigation'}}">
  <div class="portfolio-item__wrap">
    <section id="portfolio" class="portfolio-section js-portfolio-section">
      {{#each projects as |project|}}
        <div class="portfolio-item portfolio-section__item home-page__portfolio-item">
          <div class="container-size">
            <div class="home-page__header">
              <div class="portfolio-header">
                <a href="/{{{project.type_plural_raw_name}}}" class="subtitle portfolio-header__subtitle">
                  {{ project.type_plural_name }}
                  <span class="accent-slash">/</span>
                </a>
                <!-- /.subtitle -->
                <a href="/portfolio/{{ project.slug }}" class="page-title page-title_free-transform page-title_mini page-title_link portfolio-header__title portfolio-header__title_mini">
                  {{ project.title }}
                </a>
                <!-- /.page-title -->
                <div class="portfolio-descr">
                  <span class="portfolio-descr__main-text">{{ project.descr }}</span>
                </div>
                <!-- /.portfolio-descr -->
              </div>
              <!-- /.portfolio-header -->
            </div>
            <!-- /.home-page__header -->
          </div>
          <!-- /.container-size -->
          {{> portfolio_home_gallery}}
          <div class="container-size">
            <div class="container-center">
              <a href="/portfolio/{{ project.slug }}" class="accent-button accent-button_big">
                <span class="accent-button__text">{{ ../lang 'view_in_portfolio' }}</span>
              </a>
              <!-- /.accent-button -->
            </div>
            <!-- /.container-center -->
          </div>
          <!-- /.container-size -->
        </div>
        <!-- /.portfolio-item -->
      {{/each}}
    </section>
    <!-- /.portfolio-section -->

    {{#if navigationExists}}
      <div class="portfolio-page__navigation portfolio-navigation">
        <div class="container-size">
          <div class="portfolio-navigation__content">
            {{#if thereAreLastProjects}}
              <div class="portfolio-navigation__link">
                <a href="/{{{iif onlyOneType currentOneRawType 'portfolio' }}}/page/{{ lastOffset }}" class="accent-button accent-button_secondary">
                  <span class="accent-button__text">{{ lang 'show_last' }}</span>
                </a>
                <!-- /.accent-button -->
              </div>
              <!-- /.portfolio-navigation__link -->
            {{else}}
              <div class="void"></div>
            {{/if}}
            {{#if thereAreMoreProjects}}
              <div class="portfolio-navigation__link">
                <a href="/{{{iif onlyOneType currentOneRawType 'portfolio' }}}/page/{{ nextOffset }}" class="accent-button accent-button_secondary">
                  <span class="accent-button__text">{{ lang 'show_next' }}</span>
                </a>
                <!-- /.accent-button -->
              </div>
              <!-- /.portfolio-navigation__link -->
            {{/if}}
          </div>
          <!-- /.portfolio-navigation -->
        </div>
        <!-- /.container-size -->
      </div>
      <!-- /.portfolio-page__navigation -->
    {{/if}}
  </div>
  <!-- /.portfolio-item__wrap -->
</main>
<!-- /.portfolio-item-page -->