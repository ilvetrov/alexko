<div class="project-settings-panel pop-up hidden disabled" data-pop-up="page_settings_panel">
  <div class="project-settings-panel__wrap">
    <div class="project-settings-panel__container container-size">
      <div class="project-settings-panel__content" data-pop-up-content>
        <div class="project-settings-panel__close">
          <div class="pop-up__close click-extender" data-pop-up-close-button="page_settings_panel">
            {{{ directSvg.remove }}}
          </div>
          <!-- /.pop-up__close -->
        </div>
        <!-- /.project-settings-panel__close -->
        <div class="project-settings-panel__item">
          <div class="project-settings-panel__title">
            {{ lang 'status' }}
          </div>
          <!-- /.project-settings-panel__title -->
          <select name="page_status" id="" data-send-to-cloud-name="status" data-send-to-cloud-group="edit_page">
            <option value="published" {{{iifEquals project.status 'published' 'selected="selected"' '' }}}>
              {{ lang 'published' }}
            </option>
            <option value="awaiting_approval" {{{iifEquals project.status 'awaiting_approval' 'selected="selected"' '' }}}>
              {{ lang 'awaiting_approval' }}
            </option>
            <option value="draft" {{{iifEquals page.status 'draft' 'selected="selected"' '' }}}>
              {{ lang 'draft' }}
            </option>
          </select>
        </div>
        <!-- /.project-settings-panel__item -->
        <div class="project-settings-panel__item">
          <div class="project-settings-panel__title">
            {{ lang 'slug' }}
          </div>
          <!-- /.project-settings-panel__title -->
          <input type="url" data-send-to-cloud-name="slug" data-send-to-cloud-group="edit_page" {{#if page.slug}} value="{{ page.slug }}" {{/if}}>
        </div>
        <!-- /.project-settings-panel__item -->
        <div class="project-settings-panel__item">
          <div class="project-settings-panel__title">
            {{ lang 'short_descr' }}
          </div>
          <!-- /.project-settings-panel__title -->
          <textarea type="text" data-send-to-cloud-name="excerpt" data-send-to-cloud-group="edit_page" rows="4" data-multilingual="{{toString multilingual.excerpt }}">{{#if page.excerpt}}{{ page.excerpt }}{{/if}}</textarea>
        </div>
        <!-- /.project-settings-panel__item -->
      </div>
      <!-- /.project-settings-panel__content -->
    </div>
    <!-- /.container-size -->
  </div>
  <!-- /.project-settings-panel__wrap -->
</div>
<!-- /.project-settings-panel -->