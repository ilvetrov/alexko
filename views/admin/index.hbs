<main class="panel-page js-panel-page js-admin-panel-page">
  <div class="container-size">
    <div class="panel-page__wrap">
      <div class="panel-page__content">

        <div class="panel-item">
          <div class="panel-item__wrap">
            <a href="/admin/portfolio" class="panel-item__link-title">
              <h2 class="panel-item__title title-style">
                {{ lang 'portfolio' }}
              </h2>
              <!-- /.panel-item__title -->
            </a>
            <!-- /.panel-item__link-title -->
            <div class="panel-item__content">
              <div class="panel-item__items">
                <div class="panel-item__item">
                  <{{{iif projectsAmount.published 'a href="/admin/portfolio?status=published"' 'div' }}} class="status-item status-item_faded click-extender {{iif projectsAmount.published '' 'status-item_inactive'}}" title="{{ lang 'published' }}">
                    <img {{{ images.status_items.done }}} alt="{{ lang 'published' }}" class="status-item__img">
                    <div class="status-item__amount">
                      {{ projectsAmount.published }}
                    </div>
                    <!-- /.status-item__amount -->
                  </{{{iif projectsAmount.published 'a' 'div' }}}>
                  <!-- /.status-item -->
                </div>
                <!-- /.panel-item__item -->
                <div class="panel-item__item">
                  <{{{iif projectsAmount.awaitingApproval 'a href="/admin/portfolio?status=awaiting_approval"' 'div' }}} class="status-item status-item_red click-extender {{iif projectsAmount.awaitingApproval '' 'status-item_inactive'}}" title="{{ lang 'awaiting_approval' }}">
                    <img {{{ images.status_items.clock }}} alt="{{ lang 'awaiting_approval' }}" class="status-item__img">
                    <div class="status-item__amount">
                      {{ projectsAmount.awaitingApproval }}
                    </div>
                    <!-- /.status-item__amount -->
                  </{{{iif projectsAmount.awaitingApproval 'a' 'div' }}}>
                  <!-- /.status-item -->
                </div>
                <!-- /.panel-item__item -->
                <div class="panel-item__item">
                  <{{{iif projectsAmount.draft 'a href="/admin/portfolio?status=draft"' 'div' }}} class="status-item status-item_accent click-extender {{iif projectsAmount.draft '' 'status-item_inactive'}}" title="{{ lang 'drafts' }}">
                    <img {{{ images.status_items.draft }}} alt="{{ lang 'drafts' }}" class="status-item__img">
                    <div class="status-item__amount">
                      {{ projectsAmount.draft }}
                    </div>
                    <!-- /.status-item__amount -->
                  </{{{iif projectsAmount.draft 'a' 'div' }}}>
                  <!-- /.status-item -->
                </div>
                <!-- /.panel-item__item -->

              </div>
              <!-- /.panel-item__items -->
              <div class="panel-item__add-column">
                <a href="/admin/portfolio/add?token={{ adminCsrf.newToken }}" class="plus-button panel-item__plus-button click-extender" title="{{ lang 'add' }}">
                  <img {{{ images.status_items.plus }}} alt="{{ lang 'add' }}" class="plus-button__img panel-item__plus">
                </a>
                <!-- /.panel-item__plus-button -->
              </div>
              <!-- /.panel-item__add-column -->
            </div>
            <!-- /.panel-item__content -->
          </div>
          <!-- /.panel-item__wrap -->
        </div>
        <!-- /.panel-item -->

      </div>
      <!-- /.panel-page__content -->
    </div>
    <!-- /.panel-page__wrap -->
  </div>
  <!-- /.container-size -->
</main>
<!-- /.panel-page -->