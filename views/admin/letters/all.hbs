<div class="portfolio-item portfolio-item-page page-bottom-offset">
  <div class="portfolio-item__wrap">
    <div class="container-size">
      <div class="portfolio-item__header portfolio-header">
        <h1 class="page-title page-title_free-transform">
          {{#if needNew}}
            {{ lang 'new_letters' }}
          {{else}}
            {{ lang 'letters' }}
          {{/if}}
        </h1>
        <!-- /.page-title -->
      </div>
      <!-- /.portfolio-item__header -->
      <div class="portfolio-item__list">
        <table class="table">
          <tr class="table__row">
            <th class="table__header table__cell">
              Email
            </th>
            <!-- /.table__header -->
            <th class="table__header table__cell">
              {{ lang 'text' }}
            </th>
            <!-- /.table__header -->
            <th class="table__header table__cell">
              {{ lang 'writing_date' }}
            </th>
            <!-- /.table__header -->
            <th class="table__header table__cell">
              {{ lang 'new' }}
            </th>
            <!-- /.table__header -->
          </tr>
          <!-- /.table__row -->
          <tr class="table__delimiter">
            <td class="table__void" colspan="7"></td>
          </tr>
          <!-- /.table__delimiter -->
          <tr class="table__delimiter-spacer"></tr>
          {{#each letters as |letter|}}
            <tr class="table__row">
              <td class="table__cell">
                <a href="{{../linkPrefix}}/admin/letters/{{ letter.id }}" class="table__link">
                  {{ letter.email }}
                </a>
                <!-- /.table__link -->
              </td>
              <!-- /.table__cell -->
              <td class="table__cell">
                {{ letter.excerpt }}
              </td>
              <!-- /.table__cell -->
              <td class="table__cell">
                {{ letter.humanDate }}
              </td>
              <!-- /.table__cell -->
              <td class="table__cell table__cell_accent">
                {{#if letter.new}}
                  {{ ../lang 'new' }}
                {{else}}
                  
                {{/if}}
              </td>
              <!-- /.table__cell -->
            </tr>
            <!-- /.table__row -->
          {{/each}}
        </table>
        <!-- /.table -->
      </div>
      <!-- /.portfolio-item__list -->
    </div>
    <!-- /.container-size -->
  </div>
  <!-- /.portfolio-item__wrap -->
</div>
<!-- /.portfolio-item -->